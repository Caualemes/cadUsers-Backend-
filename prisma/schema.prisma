generator client {
  provider = "prisma-client-js"
  // removido output customizado para funcionar no Render
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @map("_id") @default(auto()) @db.ObjectId
  email String
  name  String
  age   String  // mudou de Int para String
}